<%= simple_form_for(@status_time) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :status, collection: [ "On Duty Not Driving", "Driving", 
                    "Off Duty", "In Sleeper"], prompt: "Select Status"  %>
    <%= f.input :notes %>
    <%= f.input :time_group_id %>
    <%= f.association :status_record %>
    <%= f.input :user_id %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: 'btn btn-mini btn-success' %>
  </div>
<% end %>
