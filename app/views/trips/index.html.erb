<p id="notice"><%= notice %></p>

<h1>Listing Trips</h1>

<div class="media">
  <div class="media-body">
    <table class="table table-hover">
      <thead>
        <tr>
      <th>Trip Date</th>
      <th>Service Time</th>
      <th>Notes</th>
      <th>Location</th>
      <th>User ID</th>
      <th></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @trips.each do |trip| %>
      <tr>
        <td><%= trip.created_at.strftime("%b %d, %Y || %I:%M:%S:%p") %></td> 
        <td></td>
        <td><%= link_to 'Show', trip, class: 'btn btn-mini' %></td>
        <td><%= link_to 'Edit', edit_trip_path(trip), class: 'btn btn-mini btn-success' %></td>
        <td><%= link_to 'Destroy', trip, method: :delete, class: 'btn btn-mini btn-danger', data: { confirm: 'Are you sure?' } %></td>
   </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<br>

