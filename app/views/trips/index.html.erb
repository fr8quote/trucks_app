<h1>Listing Trips</h1>

<div class="media">
  <div class="media-body">
    <table class="table table-hover">
      <thead>
        <tr>
      <th>Status time</th>
      <th>User</th>
      <th>Total hours</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @trips.each do |trip| %>
      <tr>
        <td>something here</td>
        <td><%= trip.user %></td>
        <td><%= trip.total_hours %></td>
        <td><%= link_to 'Show', trip, class: 'btn btn-mini' %></td>
        <td><%= link_to 'Edit', edit_trip_path(trip), class: 'btn btn-mini btn-success'  %></td>
        <td><%= link_to 'Destroy', trip, method: :delete, class: 'btn btn-mini btn-danger', data: { confirm: 'Are you sure?' } %></td>
  </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
