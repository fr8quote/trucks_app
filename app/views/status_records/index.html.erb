<p id="notice"><%= notice %></p>

<h1>Listing Status Records</h1>

<div class="media">
  <div class="media-body">
    <table class="table table-hover">
      <thead>
        <tr>
      <th>Record ID:</th>
      <th>Record Date:</th>
      <th>Record blah:</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @status_records.each do |status_record| %>
      <tr>
        <td><%= status_record.id %></td>
        <td><%= status_record.created_at.strftime("%b %d, %Y || %I:%M:%S:%p") %></td>
        <td><%= link_to 'Show', status_record, class: 'btn btn-mini' %></td>
        <td><%= link_to 'Edit', edit_status_record_path(status_record), class: 'btn btn-mini btn-success' %></td>
        <td><%= link_to 'Destroy', status_record, method: :delete, class: 'btn btn-mini btn-danger', data: { confirm: 'Are you sure?' } %></td>
   </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<br>

